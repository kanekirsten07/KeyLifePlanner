<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#B0F29D"
                android:endColor="#70c656"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="#70c656" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#E3E9E1"
                android:endColor="#C4CBC2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>