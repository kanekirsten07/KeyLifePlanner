<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#579942"
                android:endColor="#70c656"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#70c656" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#949494"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>