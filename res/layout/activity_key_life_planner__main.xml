<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/KeyLimeBackgroundColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".KeyLifePlanner_Main" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome" />

    <Button
        android:id="@+id/calendarActivity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/greenbutton" style="@style/ButtonText"
        android:text="@string/CalendarButtonLabel"
        android:drawableRight="@drawable/calendar" 
        android:paddingRight="40dp"
        android:drawablePadding="-40dp"/>
    
     <Button
        android:id="@+id/viewAchievements"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/yellowbutton" style="@style/ButtonText"
        android:text="@string/AchievementsButtonLabel"
        android:drawableRight="@drawable/star" 
        android:paddingRight="20dp"
        android:drawablePadding="-20dp"/>
    
     <Button
        android:id="@+id/viewAvatar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bluebutton" style="@style/ButtonText"
        android:text="@string/AvatarButtonLabel" />

</LinearLayout>