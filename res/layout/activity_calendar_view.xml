<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CalendarButtonColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalendarView" >
    <Spinner
        android:id="@+id/task_type_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/addtask"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/AddTaskButtonColor"
        android:text="@string/AddButtonLabel" />

    <EditText
        android:id="@+id/taskname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/task_type_spinner"
        android:layout_below="@+id/task_type_spinner"
        android:layout_marginTop="78dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text" >

        <requestFocus />
    </EditText>
  
</RelativeLayout>