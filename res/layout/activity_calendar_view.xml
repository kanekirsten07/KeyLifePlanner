<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CalendarBackgroundColor"
    android:orientation="vertical"
    tools:context=".CalendarView" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CalendarBackgroundColor"
        android:orientation="horizontal">
        
    <Button
        android:id="@+id/sunday"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/activeday"
        android:text="@string/SundayLabel"
        android:textSize="12sp" />

    <Button
        android:id="@+id/monday"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/inactiveday"
        android:text="@string/MondayLabel"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tuesday"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/inactiveday"
        android:text="@string/TuesdayLabel"
        android:textSize="12sp" />
    
    <Button
        android:id="@+id/wednesday"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/inactiveday"
        android:text="@string/WednesdayLabel"
        android:textSize="12sp" />

    <Button
        android:id="@+id/thursday"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/inactiveday"
        android:text="@string/ThursdayLabel" 
        android:textSize="12sp"/>
     <Button
        android:id="@+id/friday"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/inactiveday"
        android:text="@string/FridayLabel"
        android:textSize="12sp" />
     <Button
        android:id="@+id/saturday"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/inactiveday"
        android:text="@string/SaturdayLabel"
        android:textSize="12sp" />
     
    </LinearLayout>
    
    <EditText
        android:id="@+id/taskname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="20dp"
        android:background="@color/TextFieldColor"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text" />
    <Spinner
         android:id="@+id/task_spinner"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_below="@+id/taskname"        
         android:entries="@array/task_types" />
    
    <Button
         android:id="@+id/addtask"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_marginTop="20dp"
         android:background="@color/AddTaskButtonColor"
         android:text="@string/AddButtonLabel" />

</LinearLayout>